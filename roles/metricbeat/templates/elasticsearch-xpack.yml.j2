- module: elasticsearch
  xpack.enabled: true
  period: 60s
  hosts: [ {{ metricbeat_elasticsearch_url }} ]
  username: "{{ metricbeat_user }}"
  password: "{{ metricbeat_password }}"

  ssl.certificate_authorities: [ "/etc/letsencrypt/live/{{ ansible_host }}/fullchain.pem" ]

  scope: node
  ssl.enabled: true
