
[Unit]
Description="subspace farmer"
After=network-online.target

[Service]
User={{ subspace_owner}}
Group={{ subspace_group }}
WorkingDirectory={{ subspace_farmer_install_path }}/
ExecStart={{ subspace_farmer_binary_name }} farm --node-rpc-url {{ subspace_farmer_node_rpc_url }} --reward-address {{ subspace_farmer_wallet_adress }} {% for disk in subspace_farmer_disks %}{{ disk }} {% endfor %}
StandardOutput=append:{{subspace_farmer_log_folder}}/{{ subspace_farmer_log_file }}
StandardError=append:{{subspace_farmer_log_folder}}/{{ subspace_farmer_log_file }}
LimitNOFILE=infinity

Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
